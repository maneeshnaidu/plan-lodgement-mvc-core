@model List<StatusModel>


    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="card-title">All Statuses</h3>
                        </div>
                        <div class="col-md-6 flex">
                            <a asp-controller="Status" asp-action="Create" class="btn btn-outline-success float-right">Add New</a>
                        </div>
                    </div>

                </div>
                <!-- /.card-header -->
                <div class="card-body flex-column">
                    <table class="table table-striped table-bordered table-hover" style="width:100%" id="dataTable">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var status in Model)
                                {
                                    <tr>
                                        <td>@status.Name</td>
                                        <td>@status.Description</td>
                                        <td>
                                            <a class="btn btn-info" asp-controller="Status" asp-action="Index" asp-route-id="@status.Id">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a class="btn btn-danger" asp-controller="Status" asp-action="Index" asp-route-id="@status.Id">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>

    </div>

