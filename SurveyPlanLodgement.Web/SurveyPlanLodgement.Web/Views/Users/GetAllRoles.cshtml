@model List<RolesModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Roles</h1>

<a class="btn btn-primary" style="width:auto"
   asp-controller="Users" asp-action="AddNewRole">
    Add new role
</a>

@if (Model.Any())
{
    <table class="table table-striped table-bordered" style="width:100%" id="usersTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet.
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user.
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Users" asp-action="AddNewRole">
                Add new role
            </a>
        </div>
    </div>
}

@section Scripts{
    <script>


        $(document).ready(function () {
            $('#usersTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'print'
                ]
            });
        });

    </script>
}