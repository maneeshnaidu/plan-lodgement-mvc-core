@model ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <partial name="_Styles" />
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div>
            @if (Model?.EmailSent == true)
            {
                <div class="alert alert-success" role="alert">
                    <p>
                        If you are registered with us, <br />
                        We have sent an email on your registered email address.
                    </p>
                </div>
            }
            else
            {
                <div class="login-box">
                    <div class="login-logo">
                        <a href="#"><b>Admin</b>LTE</a>
                    </div>
                    <!-- /.login-logo -->
                    <div class="card">
                        <div class="card-body login-card-body">
                            <p class="login-box-msg">Enter email address to receive password reset link.</p>

                            <form asp-action="ForgotPassword">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                @*<div class="form-group form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" asp-for="EmailSent" /> @Html.DisplayNameFor(model => model.EmailSent)
                                        </label>
                                    </div>*@
                                <div class="form-group">
                                    <input type="submit" value="Submit" class="btn btn-primary" />
                                </div>
                            </form>

                            @*<div class="social-auth-links text-center mb-3">
                                    <p>- OR -</p>
                                    <a href="#" class="btn btn-block btn-primary">
                                        <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                                    </a>
                                    <a href="#" class="btn btn-block btn-danger">
                                        <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                                    </a>
                                </div>*@
                            <!-- /.social-auth-links -->

                            <p class="mb-1">
                                <a asp-action="ForgotPassword" asp-controller="Account">Forgot Password?</a>
                            </p>
                            <p class="mb-0">
                                <a asp-action="Signup" asp-controller="Account">Create New Account</a>
                            </p>
                            <p class="mb-0">
                                <a asp-action="Login" asp-controller="Account">Login</a>
                            </p>
                        </div>
                        <!-- /.login-card-body -->
                    </div>
                </div>
                <!-- /.login-box -->
                <!--<form asp-action="ForgotPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>-->
                @*<div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="EmailSent" /> @Html.DisplayNameFor(model => model.EmailSent)
                        </label>
                    </div>*@
                <!--<div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                    </div>
                </form>-->
            }

        </div>
    </div>



    <partial name="_Scripts" />

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    }
</body>
</html>