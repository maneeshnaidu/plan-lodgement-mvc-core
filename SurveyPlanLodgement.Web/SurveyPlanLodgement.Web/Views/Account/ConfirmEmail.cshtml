@model ConfirmEmailModel
@{
    ViewData["Title"] = "Email Confirmed";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <partial name="_Styles" />
</head>
<body class="hold-transition login-page">

    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>Admin</b>LTE</a>
        </div>
        <!-- /.login-logo -->
        @*<div class="card">*@
        <div class="card-body login-card-body">
            <div>
                <div class="row text-center">
                    <div class="col-md-4">
                        @if (Model?.EmailVerified == true)
                        {
                            <div class="alert alert-success" role="alert">
                                <p>Your email has been verified successfully.</p>
                            </div>
                        }
                        else
                        {
                            @if (Model?.EmailSent == true)
                            {
                                <p>Email sent on your registered email address.</p>
                            }
                            else
                            {
                                <p>We have sent an email on your registered email address. Click on the link to login.</p>
                            }

                            <form asp-action="ConfirmEmail">
                                <input type="hidden" asp-for="Email" />

                                <p> Did not any email or deleted by mistake?</p>
                                <div class="form-group">
                                    <input type="submit" value="Resend confirmation email" class="btn btn-primary" />
                                </div>
                            </form>

                            <p class="mb-0">
                                <a asp-action="Login" asp-controller="Account">Login</a>
                            </p>

                            @*<p>Something went wrong or the token has expired.</p>*@
                        }

                    </div>
                </div>
            </div>
        </div>
        <!-- /.login-card-body -->
    </div>
    <!-- /.login-box -->



    <partial name="_Scripts" />

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    }
</body>
</html>
